{% extends "::base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    	<div class="form_error"> {{ form_errors(form) }} </div>

    	<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.season) }} </div>
			<div class="form_label"> Jornada: </div>
			<div class="form_input"> {{ form_widget(form.season) }}</div>
		</div>

		<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.localteam) }} </div>
			<div class="form_label"> Equipo Local: </div>
			<div class="form_input"> {{ form_widget(form.localteam) }}</div>
		</div>

    	<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.scorelocalteam) }} </div>
			<div class="form_label"> Marcador Local: </div>
			<div class="form_input"> {{ form_widget(form.scorelocalteam) }}</div>
		</div>

		<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.visitingteam) }} </div>
			<div class="form_label"> Equipo Visitante: </div>
			<div class="form_input"> {{ form_widget(form.visitingteam) }}</div>
		</div>

		<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.scorevisitingteam) }} </div>
			<div class="form_label"> Marcador Visitante: </div>
			<div class="form_input"> {{ form_widget(form.scorevisitingteam) }}</div>
		</div>

		<div class="form_bloque">
			<div class="form_error"> {{ form_errors(form.gameat) }} </div>
			<div class="form_label"> Fecha del juego: </div>
			<div class="form_input"> {{ form_widget(form.gameat) }}</div>
		</div>

		<div hidden class="form_bloque">
			<div class="form_error"> {{ form_errors(form.updatedat) }} </div>
			<div class="form_label"> {{ form_label(form.updatedat)}} </div>
			<div class="form_input"> {{ form_widget(form.updatedat) }}</div>
		</div>

		<div hidden class="form_bloque">
			<div class="form_error"> {{ form_errors(form.createdat) }} </div>
			<div class="form_label"> {{ form_label(form.createdat)}} </div>
			<div class="form_input"> {{ form_widget(form.createdat) }}</div>
		</div>

		<div class="form_bloque">
			{{ form_widget(form.Guardar)}}
		</div>

    {{ form_end(form) }}

{% endblock %}