<%= @season.name %>
<%= @season.seasonbegin %>
<%= @season.seasonend %>



<%= form_for @season, url: {action: "update"}, html: {method: "patch"} do |f| %>
	
	<%= f.fields_for :games,@season.games do |game| %>				
		<%= game.fields_for :predictions,game.object.predictions.build do |prediction| %>
			<%= game.label :localteam,game.object.localteam.name %>		
			<%= prediction.text_field :scorelocalteam %>

			
			<%= prediction.text_field :scorevisitingteam  %>
			<%= game.label :visitingteam,game.object.visitingteam.name %>			
		<% end %>
		<br>
	<% end %>
	<%= f.submit "Do prediction"%>
<% end %>